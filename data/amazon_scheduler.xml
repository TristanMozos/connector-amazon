<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record model="ir.cron" id="ir_cron_amz_import_sale_orders">
            <field name="name">Amazon - Import Sales Orders</field>
            <field eval="False" name="active"/>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(minutes=10)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="doall" eval="True"/>
            <field name="model_id" ref="model_amazon_backend"/>
            <field name="code">model._scheduler_import_sale_orders()</field>
            <field name="state">code</field>
        </record>

        <record model="ir.cron" id="ir_cron_amz_import_product_product">
            <field name="name">Amazon - Import Products</field>
            <field eval="False" name="active"/>
            <field name="interval_number">24</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=1, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="doall" eval="True"/>
            <field name="model_id" ref="model_amazon_backend"/>
            <field name="code">model._scheduler_import_product_product()</field>
            <field name="state">code</field>
        </record>

        <record id="ir_cron_get_customer_feedback_orders" model="ir.cron">
            <field name="name">Amazon - Import feedbacks from customer orders</field>
            <field eval="False" name="active"/>
            <field name="interval_number">12</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=1, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="doall" eval="True"/>
            <field name="model_id" ref="model_amazon_backend"/>
            <field name="code">model._scheduler_get_customer_feedback_orders()</field>
            <field name="state">code</field>
        </record>

        <record model="ir.cron" id="ir_cron_amz_export_product_product">
            <field name="name">Amazon - Export Products</field>
            <field eval="False" name="active"/>
            <field name="interval_number">3</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=1, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="doall" eval="True"/>
            <field name="model_id" ref="model_amazon_backend"/>
            <field name="code">model._scheduler_export_product_product()</field>
            <field name="state">code</field>
        </record>

        <record model="ir.cron" id="ir_cron_amz_update_product_stock_prices">
            <field name="name">Amazon - Update Stock and Prices</field>
            <field eval="False" name="active"/>
            <field name="interval_number">24</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=1, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="doall" eval="True"/>
            <field name="model_id" ref="model_amazon_backend"/>
            <field name="code">model._scheduler_update_product_prices_stock_qty()</field>
            <field name="state">code</field>
        </record>

        <!-- Automatic import products from suppliers -->
        <record id="scheduler_fix_data_connector_amazon_action" model="ir.cron">
            <field name="name">Amazon - Fix data</field>
            <field eval="False" name="active"/>
            <field name="interval_number">3</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(hours=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_amazon_backend"/>
            <field name="code">model._scheduler_connector_amazon_fix_data()</field>
            <field name="state">code</field>
        </record>

        <record id="scheduler_throw_feeds_connector_amazon_action" model="ir.cron">
            <field name="name">Amazon - Throw feeds</field>
            <field eval="False" name="active"/>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="doall" eval="True"/>
            <field name="model_id" ref="model_amazon_backend"/>
            <field name="code">model._scheduler_throw_feeds()</field>
            <field name="state">code</field>
        </record>

        <record id="scheduler_get_products_fee_action" model="ir.cron">
            <field name="name">Amazon - Get products fee</field>
            <field eval="False" name="active"/>
            <field name="interval_number">24</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="doall" eval="True"/>
            <field name="model_id" ref="model_amazon_backend"/>
            <field name="code">model._scheduler_get_products_fee()</field>
            <field name="state">code</field>
        </record>

    </data>
</odoo>
