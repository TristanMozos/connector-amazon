<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_delete_amazon_product_from_product_template" model="ir.actions.server">
        <field name="name">Delete product on Amazon</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="condition">True</field>
        <field name="code">action = env.get('amazon.delete.product.wizard').delete_from_product_template()</field>
    </record>

    <record id="dditem_delete_amazon_product_from_template" model="ir.values">
        <field name="name">delete_amazon_product_template</field>
        <field name="model">product.template</field>
        <field name="key" >action</field>
        <field name="key2">client_action_multi</field>
        <field name="value" eval="'ir.actions.server,%d'%action_delete_amazon_product_from_product_template"/>
    </record>

    <record id="action_delete_amazon_product_from_amazon_product" model="ir.actions.server">
        <field name="name">Delete product on Amazon</field>
        <field name="model_id" ref="connector_amazon.model_amazon_product_product"/>
        <field name="state">code</field>
        <field name="condition">True</field>
        <field name="code">action = env.get('amazon.delete.product.wizard').delete_from_amazon_product()</field>
    </record>

    <record id="dditem_delete_amazon_product_from_template" model="ir.values">
        <field name="name">delete_amazon_product_template</field>
        <field name="model">amazon.product.product</field>
        <field name="key" >action</field>
        <field name="key2">client_action_multi</field>
        <field name="value" eval="'ir.actions.server,%d'%action_delete_amazon_product_from_amazon_product"/>
    </record>

</odoo>